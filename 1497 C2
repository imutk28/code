#define deb(x) cout<<#x<<" -> "<<x<<endl
const int inf=0x3f3f3f3f3f3f3f3f;
#define MAXN 1000005
const int N=2010;

int32_t main() {
    int t=1;
    cin>>t;
    while(t--){
        int n,k;
        cin>>n>>k;
        if(n&1){
            n--;
            cout<<"1 "<<n/2<<" "<<n/2<<endl;
        }
        else if(n%4!=0){
            n=n-2;
            cout<<"2 "<<n/2<<" "<<n/2<<endl;
        }
        else{
            cout<<n/4<<" "<<n/4<<" "<<n/2<<endl;
        }
    }
}
